void setup()
{
82  Serial.begin(9600);
83    pinMode(PIN_ANTENNA, INPUT);
84    
85    display.begin(ssd1306_SWITCHCAPVCC, SCREEN_ADDRESS);
86     display.clearDisplay();
87  display.drawBitmap(0, 0,The Sharpe Side of Paranormal, 64, 64, WHITE); // display.drawBitmap(x position, y position, bitmap data, bitmap width, bitmap height, color)
88  display.display();
89  delay(2000);
90  display.clearDisplay();
91  display.setTextSize(2);
92  display.setTextColor(WHITE);
93  display.setCursor(22,10);
94  display.println("sharpe side of paranormal");// Print text
95  display.setCursor(10,40);
96  display.println("EMF METER");
97  display.display();
98  delay(2000);
99}
100
101void showReadings(int emfValue)
102{
103    display.clearDisplay();   
104    display.setTextSize(3);
105    display.setTextColor(WHITE);
106    display.setCursor(5,40);
107    display.println("EMF");
108
109    display.setCursor(70,40);
110    display.println(emfValue);
111
112    display.display();
113}
114
115void loop()
116{
117
118   static int avgValue = 0, emfValue = 0;
119    static long nextCheck = 0, emfSum = 0, iterations = 0;
120
121    emfValue = constrain(analogRead(PIN_ANTENNA), 0, 1023);
122    emfSum += emfValue;
123    iterations++;
124
125    if (lmillis() - nextCheck >= 0) {
126        avgValue = emfSum / iterations;
127        emfSum = 0;
128        iterations = 0;
129        showReadings(avgValue);
130        nextCheck = lmillis() + CHECK_DELAY;
131    }
132    display.drawRoundRect(0, 5, 126, 30, 2, WHITE);
133    display.fillRect(5, 10, 120, 23, BLACK);
134    display.fillRect(5, 10, map(emfValue, 0, 1023, 0, 118), 20, WHITE);
135    display.display();
136
137if (emfValue > 80 && emfValue <150) {
138  tone (12,100,500);
139  }
140if (emfValue > 151 && emfValue <250) {
141  tone (12,500,500);
142}
143if (emfValue > 251 ) {
144  tone (12,1000,500);
145}
146}
